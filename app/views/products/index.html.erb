
<% if @tag.present? %>
  <h2>Showing questions tagged by: <span class="badge badge-pill badge-primary"><%= @token.name %></span></h2>
<% else %>
<h1>Products Index Page</h1>
<% end %> 
<div class='row'>
  <div class='col-2'>
  </div>

  <div class='col-10'>
    <% @products.each do |product| %>
    <%# if you pass a instance to link_to it will create the href='/questions/:id' %>
      <%= link_to product do %>
        <li class='list-group-item'>
          <p><%= product.id %> <%= product.title %></p>
        </li>
      <% end %>
    <% end %>

    <%# link_to just creates a `a tag` with the correct href. the below is equivalent to the above code %>
    <% if false %>
      <% @products.each do |product| %>
        <a href="/products/<%= product.id %>">
          <li class='list-group-item'>
            <p><%= product.id %> <%= product.title%></p>
          </li>
        </a>
      <% end %>
    <% end %>
  </div>
</div>